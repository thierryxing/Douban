<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/colorPrimary">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_toStartOf="@id/actionBarRightBtn"
            android:background="@drawable/bg_home_search">

            <Button
                android:id="@+id/icon_search"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_search_gray"/>

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/icon_search"
                android:layout_toStartOf="@id/actionBarLeftBtn"
                android:background="@null"
                android:hint="@string/home_search_hit"
                android:textAppearance="@style/SearchEditText"
                android:textColorHint="@color/colorLightGray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_size_middle"/>

            <Button
                android:id="@+id/actionBarLeftBtn"
                style="@style/ActionBarBtn"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:background="@drawable/ic_scan_gray"/>

        </RelativeLayout>


        <Button
            android:id="@+id/actionBarRightBtn"
            style="@style/ActionBarBtn"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:background="@drawable/ic_chat_white"/>
    </RelativeLayout>
</RelativeLayout>