<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.thierry.douban.module.status.home.card.StatusCardFindViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="@drawable/bg_recommend_banner">

            <TextView
                android:id="@+id/statusFindText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="@string/status_find"
                android:textColor="@color/colorFontBlack"
                android:textSize="@dimen/text_size_large"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_below="@id/statusFindText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_round_white_stroke_button"
                android:text="@string/status_find_more"
                android:textColor="@color/colorPrimary"/>

        </RelativeLayout>

        <View style="@style/SepView"/>

    </LinearLayout>
</layout>